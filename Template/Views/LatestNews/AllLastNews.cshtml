@model List<Template.Data.News>

<div class="row">
	@foreach (var news in Model)
	{
		if (news.IsLast == true)
		{
			<div class="col-lg-4 col-md-6">
				<div class="latest__blog__item">
					<div class="latest__blog__item__pic set-bg" data-setbg="/Content/images/latest-blog/@news.ImagePath">
						<ul>
							<li>By @news.Writer</li>
							<li>@news.UploadTime</li>
							<li>Comment</li>
						</ul>
					</div>
					<div class="latest__blog__item__text">
						<h5>@news.Title</h5>
						<p>
							@news.Description
						</p>
						<a href="#">View More <i class="fa fa-long-arrow-right"></i></a>
					</div>
				</div>
			</div>

		}
	}
</div>