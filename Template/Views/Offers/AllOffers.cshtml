@model List<Template.Data.Offer>

<div class="row">
	@foreach (var offer in Model)
	{
		<div class="col-lg-3 col-md-6 col-sm-6">
			<div class="services__item">
				<img src="~/Content/images/services/@offer.ImagePath" alt="">
				<h5>@offer.Name</h5>
				<p>
					@offer.Description
				</p>
				<a href="#"><i class="fa fa-long-arrow-right"></i></a>
			</div>
		</div>

	}

</div>



